<h1>Burger me up</h1>

<h2>Taste these burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>You ate these burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger">
    </div>

    <button type="submit">Add Burger</button>
</form>